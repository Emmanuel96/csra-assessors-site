<!Doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head.ejs') %>
    <link rel='stylesheet' href='/stylesheets/style.css' />  
  </head>
  <body>
    <h1 class="text-3xl text-purple-600 p-8 font-bold">
      RESET PASSWORD PAGE!
    </h1>

    <form class="mt-7 lg:mt-7 pb-32">
      <div class="mx-7 mt-1">
        <label class="text-sm lg:text-base">New Password</label>
        <br>
        <input id="password" class="border-2 w-full lg:h-12 border-purple-600 rounded-md py-1 lg:placeholder:text-base px-3 placeholder:text-xs" type="password" placeholder="Type your password">
      </div>

      <div class="mx-7 mt-1 lg:mt-5">
        <label class="text-sm lg:text-base">Confirm New Password</label>
        <br>
        <input id="confirm-password" class="border-2 w-full lg:h-12 border-purple-600 rounded-md p-1 lg:placeholder:text-base px-3 placeholder:text-xs" type="password" placeholder="Confirm your password">

        <div class="mt-5 lg:mt-7">
          <button onclick="resetPassword()" class="bg-purple-600 lg:py-3 py-1 px-2 text-sm lg:text-base rounded shadow-lg hover:bg-purple-600 w-full text-white">Reset</button>
        </div>
      </div>
    </form>
    <script src="/javascripts/auth/reset_password.js"></script>
  </body>
</html>